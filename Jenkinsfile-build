pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }
        stage('checkout SCM') {
            steps {
                sh "rm -rf *"
                sh "git clone https://github.com/yanichoupinou/projet-Devops.git"
            }
        }
        
        stage('Build image Docker') {
            steps {
                sh 'docker rm -f $(docker ps -qa) || true'
                sh 'docker rmi -f $(docker images -q) || true'
                sh "docker build -t myapache-image ./projet-Devops/"
                sh "docker tag myapache-image v1.0:myapache-image"
            }
        }
        
    }
        
    }

